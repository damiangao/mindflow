# Mindflow Environment Configuration
# Copy this file to .env and fill in your actual values

# ====================
# LLM Configuration
# ====================

# LLM Provider: claude, openai, deepseek, or ollama
LLM_PROVIDER=claude

# Claude API Configuration
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-haiku-20241022

# OpenAI API Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# DeepSeek API Configuration (optional)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat

# Ollama Configuration (optional, for local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# ====================
# Database Configuration
# ====================

# Database URL (SQLite for MVP)
DATABASE_URL=sqlite:///./data/mindflow.db

# ====================
# Application Configuration
# ====================

# Application Environment: development, testing, production
APP_ENV=development

# Gradio Configuration
GRADIO_HOST=0.0.0.0
GRADIO_PORT=7860
GRADIO_SHARE=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/mindflow.log

# ====================
# Task Scheduler Configuration
# ====================

# Enable background task scheduler
ENABLE_SCHEDULER=true

# Daily review reminder (24-hour format, e.g., 20:00)
DAILY_REVIEW_TIME=20:00

# Daily plan motivation reminder (24-hour format, e.g., 09:00)
DAILY_PLAN_TIME=09:00

# ====================
# Security Configuration
# ====================

# Secret key for session management (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:7860

# ====================
# Data Configuration
# ====================

# Data directory for SQLite and backups
DATA_DIR=./data

# Enable automatic database backups
AUTO_BACKUP=true

# Backup interval in hours
BACKUP_INTERVAL=24

# Maximum number of backup files to keep
MAX_BACKUPS=7

# ====================
# Development Configuration (development mode only)
# ====================

# Enable debug mode
DEBUG=true

# Enable hot reload for Gradio
GRADIO_RELOAD=true

# Enable database echo (SQL query logging)
DATABASE_ECHO=false
